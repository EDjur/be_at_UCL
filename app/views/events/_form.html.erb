<%= form_for @event do |f| %>

    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@event.errors.count, "error") %>
            prohibited this event from being saved:
          </h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <h3>Title and description</h3>

    <p>
      <%= f.label :title%>
      <br>
      <%= f.text_field :title, :value => "Sean's study party" %>
    </p>

    <p>
      <%= f.label :text %>
      <br>
      <%= f.text_field :text, :value => "We're coming together to celebrate our new assignment" %>
    </p>

    <div class="display-section">
      <h3>Location</h3>
    </div>
    <input id="pac-input" class="controls" type="text"
           placeholder="Enter a location">
    <div id="map">
    </div>

    <p>
      <%= f.label :street %>
      <br>
      <%= f.text_field :street, :value => "Euston Road" %>
    </p>

    <p>
      <%= f.label :street_number %>
      <br>
      <%= f.text_field :street_number, :value => "321, Lizmans House Flat 7"%>
    </p>

    <p>
      <%= f.label :city %>
      <br>
      <%= f.text_field :city, :value => "London"%>
    </p>

    <h3>Date and time, category and # of tickets</h3>

    <p>
      <%= f.label :start_time%>
      <br>
      <%= f.time_select :start_time%>
      <br>
      <%= f.label :start_date%>
      <br>
      <%= f.date_select :start_date, :start_year => 1900%>

    </p>

    <p>
      <%= f.label :end_time%>
      <br>
      <%= f.time_select :end_time%>
      <br>
      <%= f.label :end_date %>
      <br>
      <%= f.date_select :end_date%>
    </p>


    <p>
      <%= f.label :tickets %>
      <br>
      <%= f.number_field :tickets%>
    </p>

    <p>
      <%= f.label "Category" %>
      <br>
      <%= f.select(:category, options_for_select([["Study session", "Study session"], ["Group meeting", "Group meeting"],
                                                 ["Guest talk", "Guest talk"], ["Other", "Other"]]))%>
    </p>

    <p>
      <%= f.submit 'Create' %>
    </p>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUHGDBmVqTToBoTTppgJBDjY3ESGLmItQ&libraries=places&callback=initMap"
            async defer></script>

<% end %>