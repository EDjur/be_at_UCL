<%= form_for @event do |f| %>

    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@event.errors.count, "error") %>
            prohibited this event from being saved:
          </h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <head>
      <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
      <meta charset="utf-8">
      <link href="../../assets/stylesheets/events.scss" rel="stylesheet">
    </head>

    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text %>
    </p>

    <p>

    </p>

    <div class="display-section">
      <h3>Location</h3>
    </div>
    <input id="pac-input" class="controls" type="text"
           placeholder="Enter a location">
    <div id="map"></div>

    <p>
      <%= f.label :street %>
      <br>
      <%= f.text_field :street %>
    </p>

    <p>
      <%= f.label :street_number %>
      <br>
      <%= f.text_field :street_number %>
    </p>

    <p>
      <%= f.label :city %>
      <br>
      <%= f.text_field :city %>
    </p>

    <form>
      <div class="display-section">
        <h3>Date and time, category and # of tickets</h3>
        <label>Start:
          <input id="start-date-time" type="datetime-local">
        </label><br><br>
        <label>End:
          <input id="end-date-time" type="datetime-local">
        </label><br><br>
        <label>Category:
          <select name="category">
            <option selected disabled>Select</option>
            <option value="category1">Category1</option>
            <option value="category2">Category2</option>
          </select>
        </label><br><br>
        <label>Number of tickets:
          <input type="number" max="300" min="5">
        </label><br><br>
      </div>
    </form>


    <p>
      <%= f.submit %>
    </p>

    <script src="../../assets/javascripts/events.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUHGDBmVqTToBoTTppgJBDjY3ESGLmItQ&libraries=places&callback=initMap"
            async defer></script>

<% end %>