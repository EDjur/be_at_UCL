<h1>Listing events</h1>
<p></p>

<% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <br>
      <td><%= event.text %></td>
      <br>
      <td><%= link_to 'Show', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event_path(event), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr><br><br>
<% end %>
