<%= form_for @user do |f| %>

    <%= f.text_field :name %>
    <%= f.label :name %>


    <%= f.email_field :email %>
    <%= f.label :email %>


    <%= f.password_field :password %>
    <%= f.label :password, "Password. Min: 6 characters" %>


    <%= f.password_field :password_confirmation %>
    <%= f.label :password_confirmation, "Confirmation" %>
    <br>

    <%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>

