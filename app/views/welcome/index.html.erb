<!--Navigation & Intro-->
<header>
  <!--Mask-->
  <div class="view hm-black-strong">
    <div class="full-bg-img flex-center">
      <ul>
        <li>
          <h1 class="h1-responsive wow fadeInUp">Booking @ UCL</h1></li>
        <li>
          <p class="wow fadeInUp" data-wow-delay="0.2s">Stuff stuff stuff stuff stuff</p>
        </li>
        <li class="wow fadeInUp" data-wow-delay="0.4s">

          <a class="btn btn-white-outline btn-lg" id="signup"><i class="fa fa-user left"></i> Sign up!</a>
          <a class="btn btn-white-outline btn-lg"><i class="fa fa-book left"></i>Login (Possibly JS-expand these buttons
            to log in forms or popup)</a>
        </li>
        <li>
          <%= link_to controller: 'events' do %>
              <span class="btn btn-white-outline btn-lg">Events (temporary link)</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <!--/.Mask-->


  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="signup-modal">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Sign in</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


</header>
<!--/Navigation & Intro-->
